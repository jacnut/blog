<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<ul><% @post.comments.each do |comment| %>
  <li><%= comment.content %> </li>
  <% end %>
</ul>

<%= form_for [@post, Comment.new] do |f|%>
<%= f.text_field :content %>
<%= f.submit "Go" %>
<%  end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
